<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="user_image">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="user_introduction">Name</label>
  <%= f.text_field :introduction, autofocus: true, id:"user_introduction", placeholder:"紹介"%>
  
  <%= f.submit "Update User" %>
<% end %>